<Application
    x:Class="GLua.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:convert="clr-namespace:GLua.Converters"
    xmlns:local="clr-namespace:GLua"
    xmlns:mvvm="clr-namespace:GLua.MVVM"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Chrome" />
                <ResourceDictionary Source="Styles/TextBox" />
                <ResourceDictionary Source="Styles/TextBlock" />
                <ResourceDictionary Source="Styles/TreeView" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <!--  MVVM Base  -->
        <mvvm:ViewModel x:Key="ViewModel" />
        <!--  Converters  -->
        <convert:Text_Color x:Key="text_color" />
        <!--  Global styles  -->
    </Application.Resources>
</Application>
