<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GLua">

    <Color x:Key="BackgroundDark">#FF1E1E1E</Color>
    <Color x:Key="BackgroundLight">#8F8F8F</Color>
    <Color x:Key="BackgroundGray">#FF2B2B2B</Color>
    <Color x:Key="BackgroundLightBlue">#3363B5</Color>
    <Color x:Key="BackgroundRed">#C94F4D</Color>

    <SolidColorBrush x:Key="BackgroundDarkBrush" Color="{StaticResource BackgroundDark}" />
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />
    <SolidColorBrush x:Key="BackgroundGrayBrush" Color="{StaticResource BackgroundGray}" />
    <SolidColorBrush x:Key="BackgroundLightBlueBrush" Color="{StaticResource BackgroundLightBlue}" />
    <SolidColorBrush x:Key="BackgroundRedBrush" Color="{StaticResource BackgroundRed}" />
</ResourceDictionary>